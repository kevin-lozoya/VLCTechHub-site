{
  "extends": "eslint:recommended",
  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".njk"],
    "html/indent": "+2",
    "html/report-bad-indent": "warn"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "Site": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-console": "off"
  }
}
